<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".History">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_grey"
        android:orientation="vertical"
        android:weightSum="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/layout_seven"
            android:layout_weight="0.1428571428571429"
            tools:ignore="Suspicious0dp"
            android:orientation="horizontal"
            android:weightSum="100">
            <RelativeLayout
                android:id="@+id/rel_lay_one_week_ago"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="100"
                tools:ignore="Suspicious0dp"
                android:background="@color/yellow">
                <TextView
                    android:id="@+id/text_seven"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:text="Il y a une semaine"
                    android:textColor="@color/black"
                    android:textSize="11dp" />
                <ImageView
                    android:id="@+id/btn_com_seven"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_comment_black_48px" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/layout_six"
            android:layout_weight="0.1428571428571429"
            tools:ignore="Suspicious0dp"
            android:orientation="horizontal"
            android:weightSum="100">
            <RelativeLayout
                android:id="@+id/rel_lay_six_days_ago"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="60"
                tools:ignore="Suspicious0dp"
                android:background="@color/blue">
                <TextView
                    android:id="@+id/text_six"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:text="Il y a 6 jours"
                    android:textColor="@color/black"
                    android:textSize="11dp"/>
                <ImageView
                    android:id="@+id/btn_com_six"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_comment_black_48px"/>
            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/layout_five"
            android:layout_weight="0.1428571428571429"
            tools:ignore="Suspicious0dp"
            android:orientation="horizontal"
            android:weightSum="100">
            <RelativeLayout
                android:id="@+id/rel_lay_five_days_ago"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="80"
                tools:ignore="Suspicious0dp"
                android:background="@color/green">
                <TextView
                    android:id="@+id/text_five"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:text="Il y a 5 jours"
                    android:textColor="@color/black"
                    android:textSize="11dp" />
                <ImageView
                    android:id="@+id/btn_com_five"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_comment_black_48px" />
            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/layout_four"
            android:layout_weight="0.1428571428571429"
            tools:ignore="Suspicious0dp"
            android:orientation="horizontal"
            android:weightSum="100">
            <RelativeLayout
                android:id="@+id/rel_lay_four_days_ago"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="100"
                tools:ignore="Suspicious0dp"
                android:background="@color/yellow">
                <TextView
                    android:id="@+id/text_four"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:text="Il y a 4 jours"
                    android:textColor="@color/black"
                    android:textSize="11dp" />
                <ImageView
                    android:id="@+id/btn_com_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_comment_black_48px" />
            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/layout_three"
            android:layout_weight="0.1428571428571429"
            tools:ignore="Suspicious0dp"
            android:orientation="horizontal"
            android:weightSum="100">
            <RelativeLayout
                android:id="@+id/rel_lay_three_days_ago"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="40"
                tools:ignore="Suspicious0dp"
                android:background="@color/grey">
                <TextView
                    android:id="@+id/text_three"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:text="Il y a 3 jours"
                    android:textColor="@color/black"
                    android:textSize="11dp" />
                <ImageView
                    android:id="@+id/btn_com_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_comment_black_48px" />
            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/layout_two"
            android:layout_weight="0.1428571428571429"
            tools:ignore="Suspicious0dp"
            android:orientation="horizontal"
            android:weightSum="100">
            <RelativeLayout
                android:id="@+id/rel_lay_day_before_yesterday"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                tools:ignore="Suspicious0dp"
                android:background="@color/red">
                <TextView
                    android:id="@+id/text_two"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:text="Avant-hier"
                    android:textColor="@color/black"
                    android:textSize="11dp" />
                <ImageView
                    android:id="@+id/btn_com_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="0dp"
                    android:src="@drawable/ic_comment_black_48px" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/layout_one"
            android:layout_weight="0.1428571428571429"
            tools:ignore="Suspicious0dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/rel_lay_yesterday"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/green">
                <TextView
                    android:id="@+id/text_one"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:text="Hier"
                    android:textColor="@color/black"
                    android:textSize="11dp" />
                <ImageView
                    android:id="@+id/btn_com_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_comment_black_48px" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rel_lay_today"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/green"
                android:visibility="invisible">
                <TextView
                    android:id="@+id/text_today"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:text="Hier"
                    android:textColor="@color/black"
                    android:textSize="11dp"
                    android:visibility="invisible"/>
                <ImageView
                    android:id="@+id/btn_com_today"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_comment_black_48px"
                    android:visibility="invisible"/>
            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>